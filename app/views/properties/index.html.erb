<h1>物件一覧</h1>
<%= notice %>
<table class="proptable">
    <tr>
        <th>物件名</th>
        <th>賃料</th>
        <th>住所</th>
        <th>築年数</th>
        <th>備考</th>
   </tr>
<% @properties.each do |prop| %>
    <tr>
        <td><%= prop.property_name %></td>
        <td><%= prop.rent %>円</td>
        <td><%= prop.address %></td>
        <td><%= prop.age_of_a_building %>年</td>
        <td><%= prop.note %></td>
        <td><%= link_to '詳細', property_path(prop.id) %></td>
        <td><%= link_to '編集', edit_property_path(prop.id) %></td>
        <td><%= link_to '削除', property_path(prop.id), method: :delete, data: { confirm: '本当に削除して良いですか？'} %></td>
    </tr>
<% end %>
</table>

<%= link_to '物件を登録する', new_property_path %>